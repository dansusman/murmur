<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CFBundleDevelopmentRegion</key>
    <string>$(DEVELOPMENT_LANGUAGE)</string>
    
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    
    <key>CFBundleName</key>
    <string>$(PRODUCT_NAME)</string>
    
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    
    <key>CFBundleShortVersionString</key>
    <string>1.0</string>
    
    <key>CFBundleVersion</key>
    <string>1</string>
    
    <key>LSMinimumSystemVersion</key>
    <string>$(MACOSX_DEPLOYMENT_TARGET)</string>
    
    <key>NSHumanReadableCopyright</key>
    <string>Copyright Â© 2024. All rights reserved.</string>
    
    <!-- Menu bar only app -->
    <key>LSUIElement</key>
    <true/>
    
    <!-- Hide from dock -->
    <key>LSBackgroundOnly</key>
    <false/>
    
    <!-- Privacy usage descriptions -->
    <key>NSMicrophoneUsageDescription</key>
    <string>Murmur needs microphone access to record audio for voice transcription.</string>
    
    <key>NSAppleEventsUsageDescription</key>
    <string>Murmur needs Apple Events access to insert transcribed text into other applications.</string>
    
    <key>NSSystemAdministrationUsageDescription</key>
    <string>Murmur needs system administration access for global hotkey detection.</string>
    
    <key>NSAccessibilityUsageDescription</key>
    <string>Murmur needs accessibility access to insert transcribed text into other applications.</string>
    
    <!-- App category -->
    <key>LSApplicationCategoryType</key>
    <string>public.app-category.productivity</string>
    
    <!-- Supported document types (if any) -->
    <key>CFBundleDocumentTypes</key>
    <array>
        <dict>
            <key>CFBundleTypeExtensions</key>
            <array>
                <string>json</string>
            </array>
            <key>CFBundleTypeName</key>
            <string>Murmur Settings</string>
            <key>CFBundleTypeRole</key>
            <string>Editor</string>
            <key>LSTypeIsPackage</key>
            <false/>
        </dict>
    </array>
    
    <!-- URL schemes (if needed for future features) -->
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleURLName</key>
            <string>com.yourcompany.murmur</string>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>murmur</string>
            </array>
        </dict>
    </array>
    
    <!-- App Transport Security -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <false/>
        <key>NSExceptionDomains</key>
        <dict>
            <key>api.openai.com</key>
            <dict>
                <key>NSExceptionAllowsInsecureHTTPLoads</key>
                <false/>
                <key>NSExceptionMinimumTLSVersion</key>
                <string>TLSv1.2</string>
                <key>NSExceptionRequiresForwardSecrecy</key>
                <true/>
            </dict>
        </dict>
    </dict>
    
    <!-- Launch Services -->
    <key>LSMultipleInstancesProhibited</key>
    <true/>
    
    <!-- High resolution support -->
    <key>NSHighResolutionCapable</key>
    <true/>
    
    <!-- Supports sudden termination -->
    <key>NSSupportsSuddenTermination</key>
    <true/>
    
    <!-- App specific keys -->
    <key>MurmurDefaultHotkey</key>
    <integer>63</integer>
    
    <key>MurmurSupportedLanguages</key>
    <array>
        <string>en</string>
        <string>es</string>
        <string>fr</string>
        <string>de</string>
        <string>it</string>
        <string>pt</string>
        <string>ja</string>
        <string>ko</string>
        <string>zh</string>
    </array>
</dict>
</plist>